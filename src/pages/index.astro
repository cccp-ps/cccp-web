---
// Main page - Palestine Solidarity Counter
// Integrates all components into a cohesive landing page
import Layout from '../components/Layout.astro';
import Counter from '../components/Counter.astro';
import ContextSection from '../components/ContextSection.astro';
import DonationSection from '../components/DonationSection.astro';
import '../styles/global.css';

// Page metadata
const title = 'CCCP.PS';
const description = 'Real-time counter showing elapsed time since October 8, 2023, when Israel declared war on Gaza. Stand in solidarity with Palestinian victims and support humanitarian organizations.';
---

<Layout title={title} description={description}>
  <!-- Main page content -->
  <div class="page-container">
    <!-- Hero section with counter -->
    <section class="hero-section" role="banner" aria-labelledby="main-heading">
      <div class="hero-content">
        <!-- Main page heading -->
        <h1 id="main-heading" class="hero-title">
          CCCP.PS
        </h1>
        
        <!-- Subtitle with context -->
        <p class="hero-subtitle">
          Time elapsed since October 8, 2023, 23:52 UTC - when Israel declared war
        </p>
        
        <!-- Counter component -->
        <Counter />
      </div>
    </section>
    
    <!-- Context section -->
    <ContextSection />
    
    <!-- Donation section -->
    <DonationSection />
  </div>
</Layout>

<style>
  .page-container {
    min-height: 100vh;
    background: linear-gradient(
      135deg,
      var(--color-palestine-white) 0%,
      var(--color-gray-50) 100%
    );
  }

  .hero-section {
    width: 100%;
    padding: 3rem 0;
    text-align: center;
    background: var(--color-palestine-white);
    border-bottom: 4px solid var(--color-palestine-green);
  }

  @media (min-width: 768px) {
    .hero-section {
      padding: 4rem 0;
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      padding: 5rem 0;
    }
  }

  .hero-content {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .hero-content {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: 0 2rem;
    }
  }

  .hero-title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-palestine-black);
    line-height: var(--line-height-tight);
    letter-spacing: -0.025em;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1280px) {
    .hero-title {
      font-size: 3.75rem;
    }
  }

  .hero-subtitle {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 2rem;
    color: var(--color-gray-600);
    line-height: var(--line-height-normal);
  }

  @media (min-width: 768px) {
    .hero-subtitle {
      font-size: 1.25rem;
      margin-bottom: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      font-size: 1.5rem;
    }
  }

  /* Responsive typography adjustments */
  @media (max-width: 640px) {
    .hero-title {
      font-size: 1.5rem;
      line-height: 1.2;
    }
    
    .hero-subtitle {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
    
    .hero-section {
      padding: 2rem 0;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .page-container {
      background: white;
    }
    
    .hero-section {
      background: white;
      border-bottom: 6px solid var(--color-palestine-green);
    }
    
    .hero-title {
      color: black;
    }
    
    .hero-subtitle {
      color: black;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .page-container {
      background: linear-gradient(
        135deg,
        #111827 0%,
        #1f2937 100%
      );
    }
    
    .hero-section {
      background: #111827;
    }
    
    .hero-title {
      color: white;
    }
    
    .hero-subtitle {
      color: #d1d5db;
    }
  }

  /* Print styles */
  @media print {
    .page-container {
      background: white;
    }
    
    .hero-section {
      background: white;
      border-bottom: 2px solid black;
    }
    
    .hero-title,
    .hero-subtitle {
      color: black;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .page-container {
      background: var(--color-palestine-white);
    }
  }
</style>
