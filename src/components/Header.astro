---
const pathname = new URL(Astro.request.url).pathname;
// biome-ignore lint/correctness/noUnusedVariables: used in Astro template below
const currentPath = pathname.slice(1);
---
<header class="header">
	<div class="header-inner">
		<a href="/" class="brand">
			<img src="/cccp-logo.svg" alt="CCCP.PS logo" class="header-logo" />
			<span class="header-title">CCCP.PS</span>
		</a>
		<nav class="nav">
			<a href="/" class:list={["nav-link", { active: currentPath === "" }]}>Home</a>
			<a href="/news" class:list={["nav-link", { active: currentPath === "news" || currentPath === "news/" }]}>News</a>
		</nav>
	</div>
</header>

<style>
	.header {
		position: relative;
		z-index: 10;
		width: 100%;
		border-bottom: 1px solid #1a1a1d;
		background: rgba(10, 10, 11, 0.8);
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
	}

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 720px;
		margin: 0 auto;
		padding: 1rem clamp(1.5rem, 5vw, 3rem);
	}

	.brand {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	.brand:hover {
		opacity: 0.8;
	}

	.header-logo {
		width: 24px;
		height: 24px;
	}

	.header-title {
		font-family: 'Bebas Neue', sans-serif;
		font-size: 1.5rem;
		letter-spacing: 0.15em;
		color: #e8e6e3;
		line-height: 1;
		margin-top: 2px;
	}

	.nav {
		display: flex;
		gap: 1.5rem;
	}

	.nav-link {
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.8rem;
		color: #7a7880;
		text-decoration: none;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		padding: 0.4rem 0;
		position: relative;
		transition: color 0.2s ease;
	}

	.nav-link:hover {
		color: #c9434d;
	}

	.nav-link.active {
		color: #e8e6e3;
	}

	.nav-link.active::after {
		content: '';
		position: absolute;
		bottom: -1px;
		left: 0;
		width: 100%;
		height: 2px;
		background: #c9434d;
		box-shadow: 0 0 8px rgba(201, 67, 77, 0.5);
	}
</style>