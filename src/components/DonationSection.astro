---
// DonationSection.astro - Donation links to humanitarian organizations
// Displays donation links with proper external link handling and security attributes
import type { DonationSectionProps } from '../types/index.js';
import { ORGANIZATIONS } from '../utils/constants.js';

interface Props extends DonationSectionProps {}

const { organizations = ORGANIZATIONS, className = '' } = Astro.props;
---

<section class={`donation-section ${className}`} role="region" aria-labelledby="donation-heading">
  <div class="container">
    <div class="donation-content">
      <!-- Section heading -->
      <h2 id="donation-heading" class="donation-title">
        Support Humanitarian Organizations
      </h2>
      
      <!-- Section description -->
      <p class="donation-description">
        Help provide essential aid, medical care, and humanitarian relief to Palestinian families and children affected by the ongoing crisis.
      </p>
      
      <!-- Organization cards grid -->
      <div class="organizations-grid" role="list">
        {organizations.map((org) => (
          <div class="organization-card" role="listitem">
            <!-- Organization icon -->
            <div class="organization-icon" aria-hidden="true">
              <div class="icon-container" data-category={org.category}>
                <span class="organization-icon-emoji">
                  {org.category === 'humanitarian' && 'ü§ù'}
                  {org.category === 'medical' && 'üè•'}
                  {org.category === 'children' && 'üë∂'}
                </span>
              </div>
            </div>
            
            <!-- Organization content -->
            <div class="organization-content">
              <h3 class="organization-name">{org.name}</h3>
              <p class="organization-description">{org.description}</p>
              
              <!-- Donation link with security attributes -->
              <a 
                href={org.url}
                class="donation-link"
                target="_blank"
                rel="noopener noreferrer nofollow"
                aria-label={`Donate to ${org.name} - opens in new tab`}
              >
                <span class="link-text">Donate Now</span>
                <span class="external-icon" aria-hidden="true">‚Üó</span>
              </a>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Additional context -->
      <div class="donation-footer">
        <p class="footer-text">
          All organizations listed are established humanitarian groups providing direct aid to Palestinian communities. 
          Donations go directly to their relief efforts.
        </p>
      </div>
      
      <!-- Accessibility note for screen readers -->
      <div class="sr-only" aria-live="polite">
        Donation section with {organizations.length} humanitarian organizations supporting Palestinian relief efforts
      </div>
    </div>
  </div>
</section>

<style>
  .donation-section {
    width: 100%;
    background-color: white;
    padding: 3rem 0;
    border-top: 4px solid var(--color-palestine-red);
  }

  @media (min-width: 768px) {
    .donation-section {
      padding: 4rem 0;
    }
  }

  @media (min-width: 1024px) {
    .donation-section {
      padding: 5rem 0;
    }
  }

  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding: 0 2rem;
    }
  }

  .donation-content {
    text-align: center;
  }

  .donation-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-palestine-black);
    line-height: var(--line-height-tight);
  }

  @media (min-width: 768px) {
    .donation-title {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 1024px) {
    .donation-title {
      font-size: 2.25rem;
    }
  }

  .donation-description {
    font-size: 1rem;
    line-height: var(--line-height-relaxed);
    margin-bottom: 3rem;
    color: #374151;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .donation-description {
      font-size: 1.125rem;
    }
  }

  /* Organizations grid */
  .organizations-grid {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 3rem;
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .organizations-grid {
      gap: 2rem;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .organizations-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .organization-card {
    background-color: #f9fafb;
    border-radius: 0.5rem;
    border: 2px solid transparent;
    transition: all 0.3s ease-in-out;
    padding: 1.5rem;
  }

  .organization-card:hover {
    border-color: #e5e7eb;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  .organization-card:focus-within {
    border-color: #d1d5db;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  }

  @media (min-width: 768px) {
    .organization-card {
      padding: 2rem;
    }
  }

  .organization-card:hover {
    transform: translateY(-2px);
  }

  .organization-icon {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .icon-container {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 2px solid;
    transition: all 0.3s ease-in-out;
  }

  @media (min-width: 768px) {
    .icon-container {
      width: 5rem;
      height: 5rem;
    }
  }

  .icon-container[data-category="humanitarian"] {
    background-color: color-mix(in srgb, var(--color-palestine-red) 10%, white);
    border-color: color-mix(in srgb, var(--color-palestine-red) 30%, white);
  }

  .icon-container[data-category="humanitarian"] .organization-icon-svg {
    color: var(--color-palestine-red);
  }

  .icon-container[data-category="medical"] {
    background-color: color-mix(in srgb, var(--color-palestine-green) 10%, white);
    border-color: color-mix(in srgb, var(--color-palestine-green) 30%, white);
  }

  .icon-container[data-category="medical"] .organization-icon-svg {
    color: var(--color-palestine-green);
  }

  .icon-container[data-category="children"] {
    background-color: color-mix(in srgb, var(--color-palestine-black) 5%, white);
    border-color: color-mix(in srgb, var(--color-palestine-black) 20%, white);
  }

  .icon-container[data-category="children"] .organization-icon-svg {
    color: var(--color-palestine-black);
  }

  .organization-icon-emoji {
    font-size: 2rem;
    transition: transform 0.3s ease-in-out;
    display: block;
  }

  @media (min-width: 768px) {
    .organization-icon-emoji {
      font-size: 2.5rem;
    }
  }

  .organization-card:hover .icon-container {
    transform: scale(1.05);
  }

  .organization-card:hover .organization-icon-emoji {
    transform: scale(1.1);
  }

  .organization-content {
    text-align: center;
  }

  .organization-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-palestine-black);
    line-height: var(--line-height-tight);
  }

  @media (min-width: 768px) {
    .organization-name {
      font-size: 1.25rem;
    }
  }

  .organization-description {
    font-size: 0.875rem;
    color: #4b5563;
    margin-bottom: 1.5rem;
    line-height: var(--line-height-relaxed);
  }

  @media (min-width: 768px) {
    .organization-description {
      font-size: 1rem;
    }
  }

  /* Donation link styling */
  .donation-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    color: var(--color-palestine-white);
    background-color: var(--color-palestine-red);
    transition: all 0.2s ease-in-out;
    text-decoration: none;
  }

  .donation-link:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--color-palestine-red), 0 0 0 4px rgba(206, 17, 38, 0.2);
  }

  .donation-link:hover {
    background-color: color-mix(in srgb, var(--color-palestine-red) 90%, black);
    transform: translateY(-1px);
    text-decoration: none;
  }

  .donation-link:focus {
    ring-color: var(--color-palestine-red);
  }

  .donation-link:active {
    transform: translateY(0);
  }

  .link-text {
    font-size: 0.875rem;
    font-weight: 500;
  }

  @media (min-width: 768px) {
    .link-text {
      font-size: 1rem;
    }
  }

  .external-icon {
    font-size: 0.875rem;
    opacity: 0.75;
    transition: transform 0.2s ease-in-out;
  }

  .donation-link:hover .external-icon {
    transform: translate(2px, -2px);
  }

  /* Footer section */
  .donation-footer {
    border-top: 1px solid #e5e7eb;
    padding-top: 2rem;
  }

  .footer-text {
    font-size: 0.875rem;
    color: #4b5563;
    max-width: 32rem;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  @media (min-width: 768px) {
    .footer-text {
      font-size: 1rem;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .organizations-grid {
      gap: 1rem;
    }
    
    .organization-card {
      padding: 1rem;
    }
    
    .icon-container {
      width: 3rem;
      height: 3rem;
    }
    
    .organization-icon-emoji {
      font-size: 1.5rem;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .donation-section {
      background-color: white;
      border-top: 6px solid var(--color-palestine-red);
    }
    
    .organization-card {
      background-color: white;
      border: 2px solid #9ca3af;
    }
    
    .organization-card:hover,
    .organization-card:focus-within {
      border-color: black;
    }
    
    .icon-container {
      background-color: white;
      border: 2px solid black;
    }
    
    .organization-icon-emoji {
      filter: grayscale(1) contrast(2);
    }
    
    .donation-title,
    .organization-name {
      color: black;
    }
    
    .donation-description,
    .organization-description,
    .footer-text {
      color: black;
    }
    
    .donation-link {
      background-color: black;
      color: white;
    }
    
    .donation-link:hover {
      background-color: #1f2937;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .donation-section {
      background-color: #111827;
    }
    
    .organization-card {
      background-color: #1f2937;
      border-color: #374151;
    }
    
    .organization-card:hover,
    .organization-card:focus-within {
      border-color: #4b5563;
    }
    
    .icon-container[data-category="humanitarian"] {
      background-color: color-mix(in srgb, var(--color-palestine-red) 20%, #1f2937);
      border-color: color-mix(in srgb, var(--color-palestine-red) 40%, #374151);
    }
    
    .icon-container[data-category="medical"] {
      background-color: color-mix(in srgb, var(--color-palestine-green) 20%, #1f2937);
      border-color: color-mix(in srgb, var(--color-palestine-green) 40%, #374151);
    }
    
    .icon-container[data-category="children"] {
      background-color: #374151;
      border-color: #4b5563;
    }
    
    .icon-container[data-category="children"] .organization-icon-emoji {
      opacity: 0.8;
    }
    
    .donation-title,
    .organization-name {
      color: white;
    }
    
    .donation-description,
    .organization-description,
    .footer-text {
      color: #d1d5db;
    }
    
    .donation-footer {
      border-color: #374151;
    }
  }

  /* Print styles */
  @media print {
    .donation-section {
      background-color: white;
      border-top: 2px solid black;
    }
    
    .organization-card {
      background-color: white;
      border: 1px solid #9ca3af;
      break-inside: avoid;
    }
    
    .icon-container {
      background-color: white;
      border: 1px solid black;
    }
    
    .organization-icon-emoji {
      filter: grayscale(1) contrast(2);
    }
    
    .donation-title,
    .organization-name,
    .donation-description,
    .organization-description,
    .footer-text {
      color: black;
    }
    
    .donation-link {
      background-color: white;
      color: black;
      border: 1px solid black;
    }
    
    .donation-link::after {
      content: " (" attr(href) ")";
      font-size: 0.75rem;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .organization-card,
    .donation-link,
    .external-icon,
    .icon-container,
    .organization-icon-emoji {
      transition: none;
    }
    
    .organization-card:hover,
    .donation-link:hover {
      transform: none;
    }
    
    .organization-card:hover .icon-container,
    .organization-card:hover .organization-icon-emoji {
      transform: none;
    }
    
    .donation-link:hover .external-icon {
      transform: none;
    }
  }

  /* Screen reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>